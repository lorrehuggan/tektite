#!/usr/bin/env sh
# Git pre-commit hook to ensure code quality
# To enable this hook, copy it to .git/hooks/pre-commit and make it executable:
# cp .githooks/pre-commit.example .git/hooks/pre-commit
# chmod +x .git/hooks/pre-commit

# Exit on any error
set -e

echo "ğŸ” Running pre-commit checks..."

# Check if we have any staged files
if git diff --cached --quiet; then
  echo "â„¹ï¸  No staged changes found"
  exit 0
fi

# Get list of staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(js|jsx|ts|tsx|svelte)$' || true)

if [ -z "$STAGED_FILES" ]; then
  echo "â„¹ï¸  No JavaScript/TypeScript/Svelte files to check"
  exit 0
fi

echo "ğŸ“ Files to check:"
echo "$STAGED_FILES" | sed 's/^/  - /'

# Function to check if command exists
command_exists() {
  command -v "$1" >/dev/null 2>&1
}

# Check if bun is available, fallback to npm
if command_exists bun; then
  RUNNER="bun run"
elif command_exists npm; then
  RUNNER="npm run"
else
  echo "âŒ Neither bun nor npm found. Please install one of them."
  exit 1
fi

echo ""
echo "ğŸ¨ Checking code formatting..."
if ! $RUNNER format:check; then
  echo "âŒ Code formatting issues found!"
  echo "ğŸ’¡ Run '$RUNNER format' to fix formatting issues"
  exit 1
fi

echo ""
echo "ğŸ”§ Running ESLint..."
if ! $RUNNER lint:check; then
  echo "âŒ ESLint issues found!"
  echo "ğŸ’¡ Run '$RUNNER lint' to auto-fix issues, or '$RUNNER lint:check' to see them"
  exit 1
fi

echo ""
echo "ğŸ“‹ Running TypeScript check..."
if ! $RUNNER check; then
  echo "âŒ TypeScript errors found!"
  echo "ğŸ’¡ Fix TypeScript errors before committing"
  exit 1
fi

echo ""
echo "âœ… All pre-commit checks passed!"
echo "ğŸš€ Ready to commit"

exit 0
